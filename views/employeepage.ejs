<!DOCTYPE html>
<html lang="en">

<head>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>

  <link rel="stylesheet" type="text/css" href="/css/home.css" />
  <link rel="stylesheet" type="text/css" href="/css/employeespage.css" />
  <script src="https://kit.fontawesome.com/f383b6eabf.js" crossorigin="anonymous"></script>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Employees List</title>
</head>

<body>
  <nav id="top">
    <div id="home-n-employee">
      <h1><a href="/user/homepage">Home</a></h1>
      <h1><a href="">Employee List</a></h1>
    </div>
    <div id="userlogout">
      <p>Hi <%=user.name %> |</p>
      <a href="/auth/logout" id="logoutbtn">Log out</a>
    </div>
  </nav>
  
  <h1>Employee Details</h1>
  <table>
      <thead>
          <tr>
            <th>Profile</th>
            <th>Name</th>
            <th>Email</th>
            <th>Mobile</th>
            <th>Designation</th>
            <th>Gender</th>
            <th>Courses</th>
            <th>Action</th>
          </tr>
          </thead>
      <tbody>
          <% employees.forEach(employee => { %>
              <tr>
                  <td><img src="<%= employee.profile %>" alt="Profile Image" class="profile-img"></td>
                  <td><%= employee.name %></td>
                  <td><%= employee.email %></td>
                  <td><%= employee.mobile %></td>
                  <td><%= employee.designation %></td>
                  <td><%= employee.gender %></td>
                  <td><%= employee.courses.join(', ') %></td>
                  <td>
                    <small><a href="/employee/delete/<%= employee.id %>"><i class="fa-solid fa-trash"></i></a></small>        
                  </td>
              </tr>
          <% }); %>
      </tbody>
  </table>

  <script>
        
    <% if(flash.success){ %>
        new Noty({
            theme: 'sunset',
            text: '<%=flash.success %>',
            type: 'succes',
            layout: 'bottomLeft',
            timeout: 2000
        }).show();
    <% } %>
    <% if(flash.error && flash.error.length>0) {%>
        new Noty({
            theme: 'sunset',
            text: '<%= flash.error %>',
            type: 'error',
            layout: 'bottomLeft',
            timeout: 2000
        }).show();

    <% } %>
</script>
</body>

</html>